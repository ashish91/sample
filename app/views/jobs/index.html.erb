<p id="notice"><%= notice %></p>

<h1 class='px-3'>Browse Jobs</h1>

<h2 class='px-3'>ALL CATEGORIES</h2>
<div class="grid gap-3 d-flex flex-row mb-3 px-3">
  <% @categories.each do |category| %>
    <%= link_to "#{category.name}", categories_path(category), class: "btn btn-outline-primary position-relative" %>
  <% end %>
</div>
<%= javascript_pack_tag "react-components/CreateJob" %>

<table class='p-3'>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
